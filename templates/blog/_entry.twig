{% extends "_layout" %}

{% block main %}


                <h1>{{ entry.title }}</h1>
                <h2>{{ entry.blogIntroduction }}</h2>
                <p>{{ entry.blogBody }}</p>

                <span>Posted by <a href="">{{ entry.author }}</a> on {{ entry.postDate | date('M d, Y') }}</span>
                <p>
                    Posted in {% for category in entry.category %} 
                        <a href="{{ category.url }}">{{ category }} </a>
                    {% endfor %}
                </p>


{% endblock main %}