{% extends "_layout" %}

{% block main %}

    <h1>Projects</h1>
                
    {% for entry in craft.entries.section('projects').limit(3).all() %}
        <div class="entry">
            <a href="{{ entry.url }}">
                <h2>{{ entry.title }}</h2>
            </a>
            
            
            <small>Posted by {{ entry.author }} on {{ entry.postDate | date('M d, Y') }}</small>
            
        </div>
        <hr/>
    {% endfor %}

{% endblock %}